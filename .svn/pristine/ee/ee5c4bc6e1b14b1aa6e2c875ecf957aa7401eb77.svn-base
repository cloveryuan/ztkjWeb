 body{
    margin-top: 0px; 
    margin-bottom: 0px; 
    margin-left: 0px; 
    margin-right: 0px;
    padding: 0;
    color: black;
    background-color: black;
    overflow: hidden;
}

#player-container {
    position: absolute;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    height: 100%;
}

#player {
    position: absolute;
    left: 0;
    right: 0;
    height: 100%;
    margin-left: auto;
    margin-right: auto;
}

#loader {
    position: absolute;
    width: 100%;
    height: 20%;
    margin-left: auto;
    margin-right: auto;
    top: 30%;
}

#controls {
    position: absolute;
	left:0px;
	right:0px;
    bottom: 0px;
    height:48px;
    margin: 0;
    -webkit-animation-duration: 5s;
    -moz-animation-duration: .3s;
    animation-duration: .3s;
    background: rgba(0, 0, 0, 0.5);
}

#controls a{
    height: 48px;
    text-align: center;
    line-height: 48px;
    padding:0;
}
#controls .control {
    height: 48px;
}

#controls-left {
    float: left;
    width: 80%;
}

#controls-right {
    float: right;
    width: 20%;
}

#controls-left div {
    float: left;
}

#controls-right div {
    float: left;
}

#duration {
    color: white;
    font-size:2vw;
    padding-top: 14px;
    width: 35%;
    height:48px;
    line-height:22px;
    text-align: center;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-select: none;
}

#time {
    color: white;
    padding-top: 14px;
    width: 10%;
    height:48px;
    line-height: 22px;
    font-size:2vw;
    text-align: center;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-select: none;
}

#volume {
    height: 48px;
    width: 20%;
}

#settings {
    width: 20%;
    height:48px;
}

#fullscreen {
    width: 25%;
}

#playback {
    width: 5%;
    height:48px;
    line-height: 48px;
}


.animation-delay {
    -webkit-animation-delay: 3s;
    -moz-animation-delay: 3s;
    animation-delay: 3s;
}

.material-icons.control {
    font-size: 4vw;
    cursor: pointer;
    /* color: #ff7777; */
    color: white;
}

.collapsed {
    visibility: hidden;
}

.white-bg {
    background-color: white;
}

#la-url-form, #media-url-form, #subtitles-url-form {
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    height: 70px;
}

#settings-form {
    position: absolute;
    right: 0;
    height: 100%;
    width: 220px;
    background: rgba(0, 0, 0, 0.5);
    color: white;
}

#media-url-toggle-btn, #subtitles-toggle-btn, #la-url-toggle-btn {
    width: 220px;
    padding-left: 10px;
}

#settings-form a {
    color: white;
}

#la-url {
    border-bottom: 1px solid white;
}

#media-url {
    border-bottom: 1px solid white;
}

.input-field {
    color: white;
}

.input-field label {
    color: white !important;
}

/* label focus color */
.input-field input:focus + label {
    color: white !important;
}
/* label underline focus color */
.row .input-field input:focus {
    border-bottom: 1px solid white !important;
    box-shadow: 0 1px 0 0 white !important;
}

.btn {
    background-color: white !important;
    color: black !important;
}

#playback-speed-btn, #bitrate-btn {
    width: 100%;
    padding-left: 10px;
    margin: 0;
}

.btn:hover {
    background-color: white !important;
    color: black;
}

#progress {
    height: 48px;
    width: 80%;
    margin-left: 2%;
    margin-top: 20px;
}

#volume-popup {
    position: relative;
    display: block;
    width: 50px;
    height: 200px;
    /* background-color: white; */
    background: rgba(0, 0, 0, 0.5);
    top: -248px;
    left: 20px;
    -webkit-animation-duration: .3s;
    -moz-animation-duration: .3s;
    animation-duration: .3s;
}

#settings-popup {
    position: relative;
    display: block;
    width: 200px;
    height: 280px;
    background-color: white;
    top: -356px;
    left: 35px;
    -webkit-animation-duration: .3s;
    -moz-animation-duration: .3s;
    animation-duration: .3s;
}

.material-icons {
    user-select: none;
    -moz-user-select: none;
    -webkit-user-select: none;
}

.material-icons.tooltip-arrow-vol {
    position: absolute;
    top: 169px;
    left: -11px;
    /*color: white;*/
    color: rgba(0, 0, 0, 0.5);
    font-size: 56pt;
}

.material-icons.tooltip-arrow-settings {
    position: absolute;
    top: 247px;
    left: -11px;
    color: white;
    font-size: 56pt;
}


#volume-control-container {
    position: absolute;
    height: 80%;
    margin-left: 21px;
    margin-top: 25px;
}

#reload-source-la-url-btn, #reload-source-media-url-btn, #load-subtitles-url-btn {
    margin-top: 8px;
}

.close-input {
    height: 60px;
    margin-top: 8px;
}

.input-popup {
    background: rgba(0, 0, 0, 0.5);
}

.btn, .btn-large, .btn-flat {
    text-transform: none !important;
}

.dropdown-label, .dropdown-option {
    padding-left: 10px !important;
    margin: 0 !important;
    width: 100%;
}

.selected {
    background-color: red;
}